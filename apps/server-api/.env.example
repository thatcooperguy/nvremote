# ──────────────────────────────────────────────
# NVRemote Server API – Environment Variables
# ──────────────────────────────────────────────

# Server
PORT=3001
CORS_ORIGIN=http://localhost:3000

# PostgreSQL (Prisma)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nvremote?schema=public

# JWT
JWT_SECRET=change-me-to-a-strong-random-secret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY_DAYS=7

# ── OAuth Providers ──────────────────────────────────────────────────

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Microsoft Entra ID (Azure AD)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:3001/api/v1/auth/microsoft/callback

# Apple Sign-In
APPLE_CLIENT_ID=your-apple-service-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./keys/apple-auth-key.p8
APPLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/apple/callback

# Discord OAuth2
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_CALLBACK_URL=http://localhost:3001/api/v1/auth/discord/callback

# ── Stripe Billing ───────────────────────────────────────────────────

STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
GCP_EGRESS_COST_PER_GB_CENTS=12
BILLING_MARGIN_PERCENT=30

# ── WireGuard Gateway ────────────────────────────────────────────────

GATEWAY_URL=http://localhost:8080
GATEWAY_TOKEN=dev-gateway-token
GATEWAY_PUBLIC_KEY=<base64 encoded gateway WireGuard public key>
GATEWAY_ENDPOINT=<gateway-public-ip>:51820
