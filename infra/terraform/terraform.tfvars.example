# NVIDIA Remote Stream (NVRS) - Example Variable Values
# Copy this file to terraform.tfvars and fill in your values.

project_id   = "gridbusiness-220920"
region       = "us-west1"
zone         = "us-west1-b"
environment  = "dev"
project_name = "nvrs"

# GCE machine type for the WireGuard gateway
gateway_machine_type = "e2-small"

# Cloud SQL instance tier for PostgreSQL
db_tier = "db-f1-micro"

# Optional custom domain (leave empty to use the gateway public IP)
domain_name = ""

# SSH public key for gateway access
ssh_public_key = "ssh-rsa AAAA... user@host"

# CIDR blocks allowed to SSH into the gateway
allowed_ssh_cidrs = ["203.0.113.0/32"]

# UDP port for WireGuard VPN
wireguard_port = 51820
