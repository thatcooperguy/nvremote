<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow network connections (API, signaling, STUN/TURN) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow unsigned executable memory (required by Electron/V8 JIT) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow JIT compilation (required by Electron/V8) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow DYLD env variables (required for native addons in dev) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Required for Electron's Hardened Runtime compatibility -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <true/>

    <!-- Audio input for voice chat (future) -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
</dict>
</plist>
