generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------------------------------------
// Enums
// ---------------------------------------------------------------------------

enum OrgRole {
  ADMIN
  MEMBER
  GUEST
}

enum HostStatus {
  ONLINE
  OFFLINE
  MAINTENANCE
}

enum SessionStatus {
  PENDING
  ACTIVE
  ENDED
  FAILED
}

enum BillingPeriodStatus {
  OPEN       // Current accumulating period
  INVOICED   // Stripe invoice generated
  PAID       // Payment received
  FAILED     // Payment failed
}

// ---------------------------------------------------------------------------
// User
// ---------------------------------------------------------------------------

model User {
  id           String   @id @default(uuid()) @db.Uuid
  email        String   @unique
  name         String?
  avatarUrl    String?
  googleId     String?  @unique
  microsoftId  String?  @unique  // Microsoft Entra ID (Azure AD) object ID
  appleId      String?  @unique  // Apple Sign-In subject identifier
  discordId    String?  @unique  // Discord user ID
  isSuperAdmin Boolean  @default(false) // Platform owner — only set via DB migration or seed
  preferences  Json?    // User streaming preferences: qualityPreset, transport, notifications
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orgMemberships OrgMember[]
  sessions       Session[]
  auditLogs      AuditLog[]
  refreshTokens  RefreshToken[]

  @@index([createdAt]) // Admin user listing queries
  @@map("users")
}

// ---------------------------------------------------------------------------
// Organisation
// ---------------------------------------------------------------------------

model Org {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())

  // Enterprise SSO / AD integration (Phase: future)
  authProvider   String? // "google" | "saml" | "azure-ad" | "okta" — null means Google OAuth only
  samlEntityId   String? // SAML IdP entity ID for this org
  samlSsoUrl     String? // SAML IdP SSO URL
  samlCert       String? // SAML IdP X.509 certificate (PEM)
  allowedDomains String? // Comma-separated email domains that auto-join this org (e.g. "acme.com,acme.org")

  members        OrgMember[]
  hosts          Host[]
  auditLogs      AuditLog[]
  billingAccount BillingAccount?

  @@map("orgs")
}

model OrgMember {
  id       String   @id @default(uuid()) @db.Uuid
  userId   String   @db.Uuid
  orgId    String   @db.Uuid
  role     OrgRole  @default(MEMBER)
  joinedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  org  Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([userId, orgId])
  @@map("org_members")
}

// ---------------------------------------------------------------------------
// Host (streaming machine registered by the NVRemote host agent)
// ---------------------------------------------------------------------------

model Host {
  id                String     @id @default(uuid()) @db.Uuid
  orgId             String     @db.Uuid
  name              String
  hostname          String
  status            HostStatus @default(OFFLINE)
  publicIp          String?
  privateIp         String?
  tunnelIp          String?  // DEPRECATED: Was used for WireGuard tunnel addressing. No longer assigned for P2P sessions. Keep nullable; will be removed in a future migration.
  gatewayId         String?  // DEPRECATED: Was used to associate with a WireGuard gateway. No longer used with P2P ICE signaling. Keep nullable; will be removed in a future migration.
  gpuInfo           String?
  hostVersion String?
  hostPorts   Json?
  bootstrapToken    String?
  bootstrapTokenExpiresAt DateTime?
  apiToken          String?  @unique // Persistent API token for host agent auth (heartbeats, etc.)
  lastSeenAt        DateTime?
  createdAt         DateTime   @default(now())

  org      Org       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  sessions Session[]

  @@index([orgId])
  @@index([bootstrapToken])
  @@map("hosts")
}

// ---------------------------------------------------------------------------
// Session (a streaming connection between a user and a host)
// ---------------------------------------------------------------------------

model Session {
  id        String        @id @default(uuid()) @db.Uuid
  userId    String        @db.Uuid
  hostId    String        @db.Uuid
  status    SessionStatus @default(PENDING)
  startedAt DateTime      @default(now())
  endedAt   DateTime?
  clientIp         String?
  metadata         Json?     // P2P connection details: codec, codecs[], gamingMode, maxBitrate, targetFps, resolution, connectionType (p2p|relay), p2pEstablishedAt
  bytesTransferred BigInt    @default(0) // Cumulative bandwidth for billing

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  host Host @relation(fields: [hostId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([hostId])
  @@index([status, startedAt]) // Session timeout cleanup queries filter by status + startedAt
  @@map("sessions")
}

// ---------------------------------------------------------------------------
// Audit Log
// ---------------------------------------------------------------------------

model AuditLog {
  id           String   @id @default(uuid()) @db.Uuid
  orgId        String   @db.Uuid
  userId       String?  @db.Uuid
  action       String
  resourceType String
  resourceId   String?
  metadata     Json?
  createdAt    DateTime @default(now())

  org  Org   @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([orgId, createdAt])
  @@map("audit_logs")
}

// ---------------------------------------------------------------------------
// VPN Peer (WireGuard peer registration for VPN relay mode)
// ---------------------------------------------------------------------------

model VpnPeer {
  id           String   @id @default(uuid()) @db.Uuid
  publicKey    String   @unique
  assignedIp   String   @unique
  hostId       String?  @db.Uuid   // If this peer is a host agent
  userId       String?  @db.Uuid   // If this peer is a client
  endpoint     String?             // host:port if known
  region       String   @default("us-west1")
  lastSeenAt   DateTime?
  createdAt    DateTime @default(now())

  @@index([hostId])
  @@index([userId])
  @@map("vpn_peers")
}

// ---------------------------------------------------------------------------
// Waitlist
// ---------------------------------------------------------------------------

model WaitlistEntry {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  createdAt DateTime @default(now())

  @@map("waitlist_entries")
}

// ---------------------------------------------------------------------------
// Billing
// ---------------------------------------------------------------------------

model BillingAccount {
  id               String   @id @default(uuid()) @db.Uuid
  orgId            String   @unique @db.Uuid
  stripeCustomerId String   @unique            // Stripe Customer ID (cus_xxx)
  billingEmail     String
  currency         String   @default("usd")
  createdAt        DateTime @default(now())

  org     Org              @relation(fields: [orgId], references: [id], onDelete: Cascade)
  periods BillingPeriod[]

  @@map("billing_accounts")
}

model BillingPeriod {
  id               String              @id @default(uuid()) @db.Uuid
  billingAccountId String              @db.Uuid
  startDate        DateTime
  endDate          DateTime
  totalBytesRelay  BigInt              @default(0) // Relay bandwidth in bytes
  totalBytesVpn    BigInt              @default(0) // VPN bandwidth in bytes
  costCentsRaw     Int                 @default(0) // GCP cost in cents (before margin)
  costCentsCharged Int                 @default(0) // Customer charge in cents (cost * 1.30)
  stripeInvoiceId  String?                         // Stripe Invoice ID (in_xxx)
  status           BillingPeriodStatus @default(OPEN)
  createdAt        DateTime            @default(now())

  billingAccount BillingAccount @relation(fields: [billingAccountId], references: [id], onDelete: Cascade)
  usageRecords   UsageRecord[]

  @@index([billingAccountId, status])
  @@map("billing_periods")
}

model UsageRecord {
  id               String   @id @default(uuid()) @db.Uuid
  billingPeriodId  String   @db.Uuid
  sessionId        String   @db.Uuid
  bytesTransferred BigInt   @default(0) // Bytes transferred in this record
  connectionType   String               // "relay" | "vpn" | "p2p"
  recordedAt       DateTime @default(now())

  billingPeriod BillingPeriod @relation(fields: [billingPeriodId], references: [id], onDelete: Cascade)

  @@index([billingPeriodId])
  @@index([sessionId])
  @@map("usage_records")
}

// ---------------------------------------------------------------------------
// Refresh Token
// ---------------------------------------------------------------------------

model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expiresAt]) // Expired token cleanup queries
  @@map("refresh_tokens")
}
