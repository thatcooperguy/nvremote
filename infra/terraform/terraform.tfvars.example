# NVIDIA Remote Stream (NVRS) - Example Variable Values
# Copy this file to terraform.tfvars and fill in your values.

region       = "us-east-1"
environment  = "dev"
project_name = "nvrs"

# EC2 instance type for the WireGuard gateway
gateway_instance_type = "t3.micro"

# RDS instance class for PostgreSQL
db_instance_class = "db.t3.micro"

# Optional custom domain (leave empty to use the gateway public IP)
domain_name = ""

# Name of an existing EC2 key pair for SSH access
ssh_key_name = "my-key-pair"

# CIDR blocks allowed to SSH into the gateway
allowed_ssh_cidrs = ["203.0.113.0/32"]

# UDP port for WireGuard VPN
wireguard_port = 51820
